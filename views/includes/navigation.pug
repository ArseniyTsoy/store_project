header.header 
  div.flex
    h3.logo 
      a(href="/")
        | Groco
        span .
    nav.navbar 
      a(href="/") Главная
      a(href="/catalog") Каталог
      a(href="/user/orders") Заказы
      a(href="/about") О нас
      a(href="/contact") Контакты
    if isAuthenticated
      div.icons
        div.fa-solid.fa-bars#menu-btn
        div.fa-solid.fa-user#user-btn
        a.fa-solid.fa-magnifying-glass(href="/search")
        a(href="/user/wishlist")
          i.fa-solid.fa-heart
            span (#{wishlistItems})
        a(href="/user/cart")
          i.fa-solid.fa-cart-shopping
            span (#{cartItems})
      div.admin
        a.delete-btn(href="/admin") Админ
      div.profile
        img(src="/" + user.imageUrl, alt=user.name)
        p #{user.name}
        a.btn(href="/user/edit-profile/" + user.id) Обновить
        form(action="/auth/logout", method="POST")
          input(type="hidden", name="_csrf", value=csrfToken)
          button.delete-btn(type="submit") Выйти из профиля
    else
      div.icons
        div.fa-solid.fa-bars#menu-btn
        a(href="/auth/login") 
          i.fa-solid.fa-user
        a.fa-solid.fa-magnifying-glass(href="/search")
        a(href="/auth/login")
          i.fa-solid.fa-heart
        a(href="/auth/login")
          i.fa-solid.fa-cart-shopping
      div.flex-btn
        a.option-btn(href="/auth/login") Войти
        a.option-btn(href="/auth/signup") Регистрация