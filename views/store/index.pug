doctype html 
html(lang="ru")
  head 
    include ../includes/head
  body 
    include ../includes/navigation
    div.home-bg
      section.home
        div.content
          span 
            | Мы - это то, что мы едим
          h3 Укрепите свое здоровье при помощи натуральных продуктов
          p Lorem ipsum dolor sit amet consectetur adipisicing elit. Iusto natus culpa officia quasi, accusantium explicabo?
          a.btn(href="/about") Узнать больше
    
    if hasCategories
      
      section.list-categories
      
        h1.title Выберите категорию
        div.box-container
          each cat in categories
            div.box
              img(src="/" + cat.imageUrl, alt=cat.title)
              h3 #{cat.title}
              p #{cat.description}        
              a.btn(href=`/category?catId=${cat.id}&catTitle=${cat.title}`) Товары

    if hasProducts  
    
      section.products
      
        h1.title Свежие продукты
        div.box-container
          each product in products
            div.box
              div.price 
                span #{product.price} руб.
              a.fa-solid.fa-eye(href="/show-product/" + product.id)
              img(src=product.imageUrl, alt=product.title)
              div.name #{product.title}
              form(action="/user/cart-add", method="POST")
                input(type="hidden", name="productId", value=product.id)
                input(type="hidden", name="_csrf", value=csrfToken)
                input.qty(type="number", min="1", value="1", name="qty")
                input.btn(type="submit", value="В корзину")
              form(action="/user/wishlist-add", method="POST")
                input(type="hidden", name="productId", value=product.id)
                input(type="hidden", name="_csrf", value=csrfToken)
                input.option-btn(type="submit", value="В список желаемого")
                
    include ../includes/footer.pug
    script(src="/js/script.js") 