doctype html 
html(lang="ru")
  head 
    include ../includes/head
  body 
    include ../includes/navigation

    section.search-form

      form(action="#", method="POST")

        input.box(
          type="text", 
          name="searchString", 
          placeholder="Что будем искать?",
          value=(searchString ? searchString: null)
        )
        
        input(type="hidden", name="_csrf", value=csrfToken)
        input.btn(type="submit", value="Найти")

    if searchPerformed

      if hasResults

        section.products(style="padding-top: 0; min-height:100vh;")
          
          div.box-container

            each product in searchResults
      
              div.box
                div.price 
                  span #{product.price} руб.
                a.fa-solid.fa-eye(href="/show-product/" + product.id)
                img(src="/" + product.imageUrl, alt=product.title)
                div.name #{product.title}
                form(action="/user/cart-add", method="POST")
                  input(type="hidden", name="productId", value=product.id)
                  input(type="hidden", name="_csrf", value=csrfToken)
                  input.qty(type="number", min="1", value="1", name="qty")
                  input.btn(type="submit", value="В корзину")
                form(action="/user/wishlist-add", method="POST")
                  input(type="hidden", name="productId", value=product.id)
                  input(type="hidden", name="_csrf", value=csrfToken)
                  input.option-btn(type="submit", value="В список желаемого")
                  
      else 
        p.empty Товары не найдены:(

    include ../includes/footer.pug
    script(src="/js/script.js")