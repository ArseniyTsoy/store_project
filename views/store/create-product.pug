doctype html 
html(lang="ru")
  head
    title Добавить новый товар
    meta(charset="utf8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="css/form.css")
  body 
    form(action="/create-product", method="POST", enctype="multipart/form-data")
      label(for="title") Название
      input(type="text", name="title")#title
      label(for="image") Название
      input(type="file", name="image")#image
      label(for="description") Описание
      input(type="text", name="description")#description 
      label(for="weight") Вес
      input(type="text", name="weight")#weight 
      label(for="price") Цена
      input(type="text", name="price")#price 
      input(type="submit", value="Создать")