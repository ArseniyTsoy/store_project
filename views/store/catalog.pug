doctype html 
html(lang="ru")
  head 
    include ../includes/head
  body 
    include ../includes/navigation
    
    section.p-category
      a(href="/category?category=fruits&title=Фрукты") Фрукты
      a(href="/category?category=vegitables&title=Овощи") Овощи
      a(href="/category?category=fish&title=Рыба") Рыба
      a(href="/category?category=meat&title=Мясо") Мясо
    
    //- Add pagination
    if hasProducts 

      section.products

        h1.title Свежие продукты
        div.box-container

          each product in products

            div.box

              div.price 
                  span #{product.price}
              a.fas.fa-eye(href="/show-product/" + product.id)
              img(src="/" + product.imageUrl, alt=product.title)
              div.name #{product.title}

              div.box

                form(action="/user/cart-add", method="POST")
                  input.qty(type="number", min="1", value="1", name="qty")
                  input(type="hidden", name="productId", value=product.id)
                  input.btn(type="submit", value="В корзину")
                form(action="/user/wishlist-add", method="POST")
                  input(type="hidden", name="productId", value=product.id)
                  input.option-btn(type="submit", value="В список желаемого")
          
    include ../includes/footer.pug
    script(src="/js/script.js")