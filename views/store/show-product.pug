doctype html 
html(lang="ru")
  head 
    include ../includes/head
  body 
    include ../includes/navigation

    section.quick-view
      
      if productIsFound

        h1.title Быстрый просмотр

        div.box
          div.price 
            span #{product.price}
          img(src="/" + product.imageUrl, alt="")
          div.name #{product.title}
          div.details #{product.description}
          form(action="/user/cart-add", method="POST")
            input.qty(type="number", min="1", value="1", name="qty")
            input(type="hidden", name="productId", value=product.id)
            input.btn(type="submit", value="В корзину", name="add_to_cart")
          form(action="/user/wishlist-add", method="POST")
            input(type="hidden", name="productId", value=product.id)
            input.option-btn(type="submit", value="В список желаемого", name="add_to_wishlist")

      else 
        p.empty Товар не обнаружен

    include ../includes/footer.pug
    script(src="/js/script.js")